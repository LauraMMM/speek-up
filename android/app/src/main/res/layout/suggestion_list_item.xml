<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            >

            <ImageView
                android:id="@+id/button_vote_up"
                android:layout_width="32dp"
                android:layout_height="24dp"
                android:adjustViewBounds="true"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:src="@drawable/ic_arrow_drop_up_24dp" />

            <TextView
                android:id="@+id/text_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:padding="0dp"
                android:text="4752"
                android:layout_marginRight="0dp"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/button_vote_down"
                android:layout_width="32dp"
                android:layout_height="24dp"
                android:adjustViewBounds="true"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:src="@drawable/ic_arrow_drop_down_24dp"
                />

        </LinearLayout>
            <TextView
                android:id="@+id/text_suggestion"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Ceva subtitlu frumos"
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />

        <ImageView
            android:id="@+id/winner_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_volume_up_36dp"
            />
        <Button
            android:id="@+id/button_waze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WAZE"
            android:backgroundTint="#4caf50"
            android:textColor="@color/white"
            android:padding="12dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:visibility="gone"
            />
    </LinearLayout>

    <View
        android:id="@+id/divider_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/divider"/>


</LinearLayout>



